morado = #2B1B4B
amarillo_osc = #E1B800

@font-face {
    font-family: "pollapp_font";
    src: url(../fonts/Questrial-Regular.ttf) format("truetype");
}

.ajax-load
	z-index 1
	filter opacity(60)
	float left
	-moz-opacity .60
	opacity .60	
	color #fff
	position absolute
	text-align center
	top 170px
	left 0px
	padding 0px
	font-size 100%
	font-weight bold
	width 100%
	height 100%
	display none

body
	font-size 16px
	font-family: "pollapp_font"


header
	font-family: "pollapp_font"
	background morado
	box-shadow 0 3px 0 amarillo_osc
	color white
	height 7%
	overflow hidden
	padding 0.5em 0.5em 0.5em 0.5em	
	position relative
	width 100% 
	z-index 2
	
	.cabecera
		display inline-block

	.logo
		margin 0 auto
		padding 0.5em
		width 100%
		text-align center
		
		img
			width 50%			

		.poll_head
			margin 0 auto
			width 100%

footer
	height 10%
	padding 0.8em 0 0 0

	.imgFooter
		width 100%		
		
		





