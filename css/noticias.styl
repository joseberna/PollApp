morado = #2B1B4B
amarillo = #FFEC00
blanco = #FFFFFF
grisClaro = #D7D7D7
amarillo_osc = #E1B800

@font-face {
    font-family: "pollapp_font";
    src: url(../fonts/Questrial-Regular.ttf) format("truetype");
}

body	
	font-size 16px
	font-family: "pollapp_font"
	width 100%
	height 100%
	background-image url('../img/fondos/480x800-android-noticias.png')	

section
	height 75%
	padding 0 0 0.5em 0

	.posts		
		height 100%
		overflow-y scroll
		padding 0.5em

		.post	
			background white
			box-shadow 2px 2px 10px rgba(black, 0.5)
			border-radius 0 0 0.5em 0.5em
			color morado
			margin-bottom 0.5em	
			width 100%

			&:hover
				background rgba(grisClaro, 1)				
		
			.description			
				width 100%	

				.details
					margin-left 70px							

					.date
						float right
						margin 0 1em 0 0
						font-size 0.8 em

					.name
						color morado
						font-size 1 em
						margin 0
						padding 0.5em 0.5em 0 0
						text-align left

					.screenName
						color grisOscuro
						font-size 0.8 em					
						margin 0
						padding 0.5em 0.5em 0 0
						text-align left

					.text
						margin 0.5em 0.5em 0.5em 0
						text-align justify									
				
				.imagen
					float left

					img
						height 100%
						width 100%
						padding 0.5em 0 0.5em 0.5em
						vertical-align top

				.icon
					float right

					img						
						padding 0.5em 1em 0.5em 0.5em
						vertical-align top

