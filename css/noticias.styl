body
	background blanco
	font-size 16px
	font-family: "pollapp_font"
	text-align center
	
	.noti_cabecera		
		width 100%	

footer
	.footer
		background blanco

.posts
	height 410px
	overflow-y scroll
	padding 0.5em

	.post	
		background white
		box-shadow 2px 2px 10px rgba(black, 0.5)
		border-radius 0 0 0.5em 0.5em
		color morado
		margin-bottom 0.5em	
	
		.description			
			width 100%	

			.details
				margin-left 70px

				.name
					color morado
					font-size 1 em					
					margin 0
